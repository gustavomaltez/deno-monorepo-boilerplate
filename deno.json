{
  "importMap": "./workspace-import-map.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "tasks": {
    "workspace:setup-watch": "deno run --allow-read --allow-write setup-workspace.ts --watch",
    "api:start": "cd packages/api && deno task start",
    "api:test": "cd packages/api && deno task test",
    "web:start": "cd packages/web && deno task start",
    "web:test": "cd packages/web && deno task test"
  }
}